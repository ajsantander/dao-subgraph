{
  "name": "@aragon/dao-subgraph",
  "version": "1.0.0",
  "repository": "https://github.com/graphprotocol/aragon-network",
  "license": "MIT",
  "scripts": {
    "build": "graph build",
    "codegen": "graph codegen --output-dir src/types/",
    "draw-schema": "./scripts/draw-schema.sh",
    "create:rpc": "graph create dao-subgraph --node http://127.0.0.1:8020",
    "deploy:rpc": "graph deploy dao-subgraph --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "deploy": "graph deploy --debug dao-subgraph --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "watch-local": "graph deploy dao-subgraph --watch --debug --node http://127.0.0.1:8020/ --ipfs http://localhost:5001",
    "prepare:devchain": "mustache config/devchain.json subgraph.template.yaml > subgraph.yaml",
    "prepare:mainnet": "mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:rinkeby": "mustache config/rinkeby.json subgraph.template.yaml > subgraph.yaml",
    "prepare:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    "prepare:staging": "mustache config/staging.json subgraph.template.yaml > subgraph.yaml"

  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.16.0",
    "@graphprotocol/graph-ts": "^0.16.0",
    "mustache": "^4.0.1"
  },
  "dependencies": {
    "@aragon/os": "^4.4.0",
    "graphqlviz": "^3.1.0"
  }
}
